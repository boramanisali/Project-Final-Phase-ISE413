@model OblastsModel

@* Generated from Custom Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container";
    var dateTimePickerClass = "datetimepicker";
}
@{
    ViewData["Title"] = "Oblasts Create";
}

<div class="@containerDivClass">
    <h3>@ViewData["Title"]</h3>
    <hr />
</div>

<div class="@containerDivClass">
    @if (TempData["Message"] is not null)
    {
    <p class="text-danger">
        @TempData["Message"]
    </p>
    }
    <form asp-action="Create" autocomplete="off">
		@Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <label asp-for="OblastName" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
			    <input asp-for="Record.OblastName" class="form-control" />
				<span asp-validation-for="Record.OblastName" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="DeputyNumber" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
			    <input asp-for="Record.DeputyNumber" class="form-control" />
				<span asp-validation-for="Record.DeputyNumber" class="text-danger"></span>
			</div>
        </div>

@* Can be uncommented and used for many to many relationships. {Entity} may be replaced with the related entiy name in the controller and views. *@
        
        <div class="row mb-3">
            <label asp-for="PoliticalPartyIds" class="col-2 col-form-label fw-bold"></label>
	        <div class="col-10">
		        <select multiple asp-for="PoliticalPartyIds" class="form-select" asp-items="ViewBag.PoliticalPartyIds"></select>
		        <span asp-validation-for="PoliticalPartyIds" class="text-danger"></span>
	        </div>
        </div>
       

        <hr />  
        <div class="row mb-3">
			<div class="offset-2 col-10">
                <button type="submit" class="btn btn-primary">Save</button>
				&nbsp;&nbsp;
                <button type="reset" class="btn btn-outline-primary">Reset</button>
				&nbsp;&nbsp;
				<a asp-action="Index">Back to List</a>
			</div>
        </div>
    </form>
</div>  
